<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SavvyCents" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SavvyCents" parent="Base.Theme.SavvyCents" />

    <style name="ButtonTextStyle1_Selected_Secondary">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_round_selected_1</item>
    </style>

    <style name="ButtonTextStyle2_Selected_Primary">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:background">@drawable/btn_round_selected_1</item>
    </style>

    <style name="ButtonTextStyle2_UnSelected">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:background">@drawable/btn_round_unselected_1</item>
    </style>

    <style name="TabAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="SelectedTabAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabLayoutSelectedTabAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="TabLayoutTabAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

</resources>